# astrid.tech backend
api.astrid.tech {
    @django {
        path /static/* /media/*
    }

    route {
        file_server @django {
            root /var/www/astrid_tech/
        }
    }
    reverse_proxy * http://astrid_tech_api_1:8001
    encode zstd gzip
}

